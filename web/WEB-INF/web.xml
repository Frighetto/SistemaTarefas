<?xml version="1.0" encoding="UTF-8"?>
<web-app version="4.0" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd">
    <servlet>
        <servlet-name>SalvarTarefa</servlet-name>
        <servlet-class>gateway.SalvarTarefa</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ApresentarTarefa</servlet-name>
        <servlet-class>gateway.ApresentarTarefa</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeletarTarefa</servlet-name>
        <servlet-class>gateway.DeletarTarefa</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AlterarTarefa</servlet-name>
        <servlet-class>gateway.AlterarTarefa</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SalvarTarefa</servlet-name>
        <url-pattern>/SalvarTarefa</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ApresentarTarefa</servlet-name>
        <url-pattern>/ApresentarTarefa</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeletarTarefa</servlet-name>
        <url-pattern>/DeletarTarefa</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AlterarTarefa</servlet-name>
        <url-pattern>/AlterarTarefa</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
